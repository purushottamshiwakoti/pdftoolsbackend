// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  fullName   String
  email      String   @unique
  password   String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Pages {
  id                   String     @id @default(auto()) @map("_id") @db.ObjectId
  title                String?
  metaTitle            String?
  metaDescription      String?
  slug                 String     @unique
  shortDescription     String?
  stepDescription      String?
  longDescription      String?
  featuresTitle        String?
  longDescriptionTitle String?
  updated_at           DateTime   @updatedAt
  Steps                Steps[]
  Features             Features[]
}

model Steps {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  page_id    String   @db.ObjectId
  title      String
  page       Pages    @relation(fields: [page_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
  updated_at DateTime @updatedAt
}

model Features {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  page_id     String   @db.ObjectId
  page        Pages    @relation(fields: [page_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
  icon        String
  title       String
  description String
  updated_at  DateTime @updatedAt
}

model OtherPages {
  id              String     @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  title           String?
  metaTitle       String?
  metaDescription String?
  description     String?
  updated_at      DateTime   @updatedAt
  Settings        Settings[]
}

model Settings {
  id                  String     @id @default(auto()) @map("_id") @db.ObjectId
  title               String?
  description         String?
  image               String?
  imageAlt            String?
  button              String?
  buttonHref          String?
  buttonTwo           String?
  buttonTwoHref       String?
  tasksTitle          String?
  tasksDescription    String?
  tasksSubTitle       String?
  tasksSubDescription String?
  tasksButton         String?
  tasksButtonHref     String?
  tasksImage          String?
  tasksImageAlt       String?
  updated_at          DateTime   @updatedAt
  other_page_id       String     @db.ObjectId
  other_page          OtherPages @relation(fields: [other_page_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
}

model ChooseUs {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  image       String
  imageAlt    String
  title       String
  description String
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
}

model Reviews {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  role        String
  description String
  rating      String
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
}

model CompanyImages {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  image         String?
  imageAlt      String?
  imageTwo      String?
  imageTwoAlt   String?
  imageThree    String?
  imageThreeAlt String?
  imageFour     String?
  imageFourAlt  String?
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt
}

model SeoSettings {
  id                         String   @id @default(auto()) @map("_id") @db.ObjectId
  ogTitle                    String
  ogDescription              String
  ogImage                    String
  ogImageAlt                 String
  googleSiteVerificationCode String?
  created_at                 DateTime @default(now())
  updated_at                 DateTime @updatedAt
}
